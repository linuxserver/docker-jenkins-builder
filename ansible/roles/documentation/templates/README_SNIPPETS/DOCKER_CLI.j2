  --net={{ param_net }} `#optional` \
{% endif %}
{% if privileged is sameas true %}
  --privileged \
{% elif privileged == 'optional' %}
  --privileged `#optional` \
{% endif %}
{% if cap_add_param %}
{% for item in cap_add_param_vars %}
  --cap-add={{ item.cap_add_var }} \
